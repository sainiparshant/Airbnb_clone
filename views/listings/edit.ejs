<% layout("layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2" >
  
    <h2 >Edit listing</h2>
  <form method="POST" action="/listings/<%= listing._id%>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="listing[title]" placeholder="Add a Catchy Title" value="<%= listing.title %>" required class="form-control">
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" placeholder="Enter Description"  required class="form-control" ><%= listing.description %>"</textarea>
      <div class="invalid-feedback">
        Please enter a short description
      </div>
    </div>
   <div class="mb-3">
    <img src="<%= originalImageUrl %>" alt="image">
  </div>

    <div class="mb-3">
      <label for="image" class="form-label">Uploag new image</label>
      <input type="file" name="listing[image]" class="form-control">
    </div>
  
    <div class="row">
    <div class="mb-3 col-md-4">
      <label for="price" class="form-label">Price</label>
      <input type="number" name="listing[price]" required placeholder="1200" value="<%= listing.price %>" class="form-control">
      <div class="invalid-feedback">
        Please enter a valid Price
      </div>
    </div>
    <div class="mb-3 col-md-8">
      <label for="country" class="form-label">Country</label>
      <input type="text" name="listing[country]" placeholder="India" value="<%= listing.country %>" required class="form-control">
      <div class="invalid-feedback">
        Country should be valid
      </div>
    </div>
  </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input type="text" name="listing[location]" placeholder="Saharanpur" required value="<%= listing.location %>" class="form-control">
      <div class="invalid-feedback">
        Location should be valid
      </div>
    </div>
    <button class="btn btn-dark edit-btn mt-3"> Submit </button>
    
  </form>
  </div>
  </div>
  
</body>
